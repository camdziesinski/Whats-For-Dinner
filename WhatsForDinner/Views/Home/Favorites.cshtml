<meta name="viewport" content="width=device-width, initial-scale=1.0">

@{
    ViewData["Title"] = "Favorites";
}
@model List<Restaurants>

<div class="mobileHide">
    <table class="table-bordered">
        <tr>
            <th>Restaurants</th>
            <th>Zip Code</th>
            <th>Rating</th>
            <th>Notes</th>
        </tr>
        @foreach (var favorite in Model)
        {
            <tr>
                <td>@favorite.Name</td>
                <td>@favorite.ZipCode</td>
                <td>
                    <form action="../home/EditRestaurant" method="post">
                        <input type="hidden" name="Id" value="@favorite.Id" />
                        <input type="number" name="userRating" value="@favorite.UserRating" min="0" max="5" />
                        <input type="Submit" name="Submit" value="Update" />
                    </form>
                </td>
                <td><div style="height:90px;width:350px;overflow:scroll;">@favorite.Notes</div></td>
                <td><a class="btn" href="../Home/RemoveRestaurant?id=@favorite.Id">🗑️</a></td>
            </tr>
        }

    </table>
</div>
<div class="mobileShow">
    <table class="table-bordered">
        <tr>
            <th>Restaurants</th>
            <th>Rating</th>
        </tr>
        @foreach (var favorite in Model)
        {
            <tr>
                <td>@favorite.Name<br />zip: @favorite.ZipCode</td>
                <td>@favorite.UserRating</td>
                <td>
                    <form action="../home/EditRestaurant" method="post">
                        <input type="hidden" name="restaurantObject" value="@Model" />
                        <input type="Submit" name="Submit" value="Update" />
                    </form>
                </td>
                <td><a class="btn" href="../Home/RemoveRestaurant?id=@favorite.Id">🗑️</a></td>
            </tr>
        }
    </table>

</div>
<style type="text/css">
    .mobileHide { /*display: none;*/
    }
    /* Smartphone Portrait and Landscape */
    @@media only screen and (min-device-width : 320px) and (max-device-width : 480px) {
        .mobileHide {
            display: none;
        }
    }

    .mobileShow {
        display: none;
    }
    /* Smartphone Portrait and Landscape */
    @@media only screen and (min-device-width : 320px) and (max-device-width : 480px) {
        .mobileShow {
            display: inline;
        }
    }
</style>