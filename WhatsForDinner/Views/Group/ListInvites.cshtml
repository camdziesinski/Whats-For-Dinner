@model List<Groups>
@{
    ViewData["Title"] = "ListInvites";
}
@if (Model.Count != 0)
{
    <h1>Your Group Invites</h1>

    <table class="table-bordered text-center">
        <tr>
            <th>Group</th>
        </tr>
        <tr>
            @foreach (Groups invite in Model)
            {
                <td><a class="groupname btn btn-block" href="../Group/GroupMembers?id=@invite.Id">@invite.Name</a></td>
                <td><a href="../Group/JoinGroup?id=@invite.Id" class="btn btn-outline-dark">Accept</a></td>
            }
        </tr>
    </table>

    <style>
        a.groupname:hover {
            background-color: dodgerblue
        }
    </style>
}
else
{
    <h3>You Have No Invites</h3>
}
