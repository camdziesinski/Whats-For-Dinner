
@{
    ViewData["Title"] = "NewGroup";
}

<h1>Create A Group</h1>

<form action="../Group/CreateGroup" method="post">
    Group Name: <input type="text" name="Name" placeholder="Group Name" />
    Family<input type="radio" name="Type" value="Family" />
    Friends<input type="radio" name="Type" value="Friends" />
    Co-Workers<input type="radio" name="Type" value="Co-Workers" />
    Team<input type="radio" name="Type" value="Team" />
    <input type="submit" value="Create" />
</form>